<main id="main">
  <div class="mt-6 mb-2 font-bold">
    Create a Post
  </div>
  <%= turbo_frame_tag Post.new do %>
    <%= render "form", post: @post %>
  <% end %>
  <div class="mb-2 font-bold">Latest Activity</div>
  <%= turbo_frame_tag "posts" do %>
    <div class="grid">
      <%= render @posts %>
    </div>
  <% end %>
</main>
