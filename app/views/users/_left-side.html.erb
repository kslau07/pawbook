<div class="grid mt-4">
  <div class="grid justify-center">
    <% if current_user.avatar.attached? %>
      <%= image_tag(current_user.avatar_as_thumbnail("large").url) %>
    <% else %>
      <div>
        <%= image_tag("no-profile-photo.svg", :alt => "An is;age representing no photo uploaded.", :class => "", size: "200x200") %>
      </div>
    <% end %>
  </div>
  <div id="<%= dom_id(@user) %>-friends" class="mt-6 grid gap-1 bg-blue-500 rounded outline outline-blue-500">
    <div class="py-1 px-4 text-lg text-white bg-blue-500 rounded">Friends</div>
    <div class="p-4 font-bold bg-slate-50">
      See friends
    </div>
  </div>
</div>
