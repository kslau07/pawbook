<div class="mt-4 mb-4 text-lg font-bold"><%= @user.username %></div>
<div id="<%= dom_id(@user) %>-my-pets" class="grid mb-6 bg-blue-500 rounded gap-[1px] outline outline-blue-500 outline-1">
  <div class="py-1 px-4 text-base text-white bg-blue-500 rounded">My Pets</div>
  <div class="p-4 font-bold bg-slate-50">
    <% if @user.pet %>
      <%= @user.pet&.name %>
    <% else %>
      No pets listed yet.
    <% end %>
  </div>
</div>
<div id="<%= dom_id(@user) %>-about-me" class="grid bg-blue-500 rounded gap-[1px] outline outline-1 outline-blue-500">
  <div class="py-1 px-4 text-base text-white bg-blue-500 rounded">About me</div>
  <div class="p-4 bg-slate-50">
    Joined Pawbook in <%= @user.created_at.year %>
  </div>
  <div class="p-4 bg-slate-50">
    <!-- TODO: Allow customizing about me here -->
    I love my pets!
  </div>
</div>
