<main id="main">
  <div id="users-show-info" class="grid grid-cols-[4fr_5fr]">
    <div id="users-show-left-side" class="pr-4">
      <%= render "left-side" %>
    </div>
    <div id="users-show-right-side" class="pl-4">
      <%= render "right-side" %>
    </div>
  </div>
  <% if current_page?(profile_path) %>
    <div class="mt-6">
      <%= link_to "Go to your dashboard", dashboard_path, class: "bg-white hover:bg-gray-100 text-green-700 font-semibold py-1 px-2 text-sm border border-gray-400 rounded shadow" %>
    </div>
  <% else %>
    <div class="mt-6">
      <%= link_to "Send friend request", dashboard_path, class: "bg-white hover:bg-gray-100 text-orange-400 font-semibold py-1 px-2 text-sm border border-gray-400 rounded shadow" %>
    </div>
  <% end %>
  <div class="mb-2 font-bold mt-10">
    <% if current_page?(profile_path) %>
      Write something on your wall
    <% else %>
      Write something on <%= @user.username %>'s wall
    <% end %>
  </div>
  <%= turbo_frame_tag Post.new do %>
    <%= render "posts/form", post: @post %>
  <% end %>
  <div class="font-bold"><%= @user.username %>'s Latest Activity</div>
  <%= turbo_frame_tag dom_id(@user) do %>
    <div class="grid">
      <%= render @posts %>
    </div>
  <% end %>
</main>
