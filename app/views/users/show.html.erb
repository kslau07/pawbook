<main id="main">
  <div id="users-show-info" class="grid grid-cols-2 outline">
    <div id="users-show-avatar-about">
    </div>
    <div id="users-show-pets">
    </div>
  </div>
</main>
<%
=begin %>
<div class="text-lg font-bold"><%= @user.username %></div>
<div class="w-40 outline">
  <% if current_user.avatar.attached? %>
    <%= image_tag(current_user.avatar_as_thumbnail("large").url) %>
  <% else %>
    <div>
      <%= image_tag("no-profile-photo.svg", :alt => "An image representing no photo uploaded.", :class => "", size: "100x100") %>
    </div>
  <% end %>
</div>
<%= render "pets" %>
<% if @user == current_user %>
  <%= turbo_frame_tag Post.new do %>
    <%= render "posts/form", post: @post %>
  <% end %>
<% end %>
<div class="font-bold"><%= @user.username %>'s Latest Activity</div>
<%= turbo_frame_tag dom_id(@user) do %>
  <div class="grid">
    <%= render @posts %>
  </div>
<% end %>
<%
=end %>
