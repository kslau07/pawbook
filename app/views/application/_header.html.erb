<div id="gutter-left" class="bg-blue-500"></div>
<div id="header-left" class="flex gap-2 items-center bg-blue-500">
  <%= link_to root_path, { class: "text-3xl font-bold logo-font text-white" } do %>
    pawbook
    <%= image_tag "paw-3-svgrepo-com-white.svg", { class: 'logo-image pb-1', alt: 'A pawprint', size: "25x25" }%>
  <% end %>
</div>
<div id="header-center" class="grid items-center bg-blue-500">
  <input id="search-bar" type="text" placeholder="search" class="grid p-4 w-3/4 h-7 bg-white rounded-lg focus:outline-blue-500">
</div>
<div id="header-right" class="flex relative gap-8 justify-end items-center bg-blue-500">
  <%= turbo_frame_tag "notifications" do %>
    <%= render "notifications/notifications" %>
  <% end %>
  <%= link_to profile_path do %>
    <div class="avatar-circle avatar-circle-sm">
      <% if current_user.avatar.attached? %>
        <%= image_tag(current_user.avatar_as_thumbnail("small").url) %>
      <% else %>
        <%= current_user.username[0] %>
      <% end %>
    </div>
  <% end %>
</div>
<div id="gutter-right" class="bg-blue-500"></div>
<%
=begin %>
<% if true %>
  <%= link_to image_tag("bell-svgrepo-com.svg", :alt => "A bell icon", :class => "", size: "30x30"), root_path %>
<% else %>
  <%= link_to image_tag("gray-bell-svgrepo-com.svg", :alt => "A grayed out bell icon", :class => "", size: "30x30"), root_path %>
<% end %>
