<%= render 'header' %>
<div class="grid grid-cols-[1fr_1fr_1fr]">
  <div><%= render 'nav' %></div>
  <div>
    <h2 class="text-3xl my-6">Dashboard</h2>
    <div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
          html: { method: :put, class: "grid gap-10" }) do |f| %>
        <% if resource.errors.any? %>
          <div class="p-4 bg-red-100 outline outline-red-300 rounded">
            <%= render "devise/shared/error_messages", resource: resource %>
          </div>
        <% end %>
        <div class="grid outline outline-blue-300 gap-1 bg-blue-300 rounded">
          <div class="bg-blue-300 px-4 py-1 text-lg text-white">Pets' names</div>
          <div class="bg-slate-50 p-4 font-bold">
            <%= f.text_field :pets_name %>
          </div>
        </div>
        <div class="grid outline outline-blue-300 gap-1 bg-blue-300 rounded">
          <div class="bg-blue-300 px-4 py-1 text-lg text-white">Profile Photo</div>
          <div class="bg-slate-50 p-4 grid justify-center">
            <% if @user.avatar.attached? %>
              <%= link_to image_tag(@user.avatar_as_thumbnail("large").url), @user.avatar.url if @user.avatar.attached? %>
            <% else %>
              <div class="circle-lg text-8xl flex justify-center items-center">
                <%= @user.username[0] %>
              </div>
            <% end %>
          </div>
          <div class="bg-slate-50 p-4">
            <%= f.label :avatar, "Upload: " %>
            <%= f.file_field :avatar %>
          </div>
          <% if @user.avatar.attached? %>
            <div class="bg-slate-50 p-4 text-center">
              <%# HACK: We should use POST here %>
              <%= link_to "Remove photo", { action: :remove_avatar },
                           class: "text-red-500", method: :get %>
            </div>
          <% end %>
        </div>
        <div class="grid outline outline-blue-300 gap-1 bg-blue-300 rounded">
          <div class="bg-blue-300 px-4 py-1 text-lg text-white">Account Details</div>
          <div class="bg-slate-50 p-4 font-bold">
            <%= @user.email %>
          </div>
          <div class="bg-slate-50 p-4 font-bold">
            <%= f.text_field :username %>
          </div>
          <div class="field">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <div class="field">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password" %>
          </div>
        </div>
        <div class="actions grid grid-cols-1 gap-4 text-center">
          <%= f.submit "Save Changes", 
              class: "bg-lime-500 hover:bg-lime-600 text-white text-lg font-bold tracking-wide py-3 px-4 rounded-lg cursor-pointer w-full" %>
          <%= link_to "Discard changes", dashboard_path %>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
